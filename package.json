{
	"name": "ts-react-express-esbuild",
	"type": "module",
	"version": "1.0.0",
	"description": "A boilerplate project for TypeScript, React, Express using esbuild.",
	"main": "dist/server.js",
	"scripts": {
		"watch:client": "node esbuild-config/client.dev.mjs",
		"watch:server": "node esbuild-config/server.dev.mjs",
		"watch:restart-server": "nodemon --config nodemon.json",
		"dev": "npm-run-all --parallel watch:*",
		"build:client": "node esbuild-config/client.prod.mjs",
		"build:server": "node esbuild-config/server.prod.mjs",
		"build": "npm-run-all --parallel build:*",
		"start": "node dist/server.js",
		"type-check": "tsc --noEmit"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"keywords": [
		"typescript",
		"react",
		"express",
		"esbuild",
		"boilerplate"
	],
	"author": "Covalence",
	"license": "MIT",
	"dependencies": {
		"bootstrap": "^5.3.5",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.1",
		"@types/node": "^22.14.0",
		"@types/react": "^19.1.0",
		"@types/react-dom": "^19.1.2",
		"esbuild": "^0.25.3",
		"esbuild-sass-plugin": "^3.3.1",
		"nodemon": "^3.1.9",
		"npm-run-all": "^4.1.5",
		"sass": "^1.86.3",
		"typescript": "^5.8.3"
	}
}